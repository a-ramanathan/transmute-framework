{
  "ref": "master",
  "path": "typings",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "diagnostics": false,
    "removeComments": true,
    "noImplicitAny": false,
    "declaration": true,
    "noResolve": false,
    "noEmitHelpers": true,
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "typings/global",
    "typings/index.d.ts"
  ],
  "files": [
    "./src/index.ts"
  ]
}